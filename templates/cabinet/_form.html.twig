{% block form%}
    {{ form_start(form) }}
    <div style="margin-bottom: 1rem;">
        <div>
            <div>
                {{ form_errors(form.username) }}
            </div>
            <div>
                {{ form_label(form.username) }}
            </div>
            <div>
                {{ form_widget(form.username) }}
            </div>
            <small>{{ form_help(form.username) }}</small>
        </div>
        <div>
            <div>
                {{ form_errors(form.email) }}
            </div>
            <div>
                {{ form_label(form.email) }}
            </div>
            <div>
                {{ form_widget(form.email) }}
            </div>
            <small>{{ form_help(form.email) }}</small>
        </div>
        <div>
            <div>
                {{ form_errors(form.firstname) }}
            </div>
            <div>
                {{ form_label(form.firstname) }}
            </div>
            <div>
                {{ form_widget(form.firstname) }}
            </div>
            <small>{{ form_help(form.firstname) }}</small>
        </div>
        <div>
            <div>
                {{ form_errors(form.lastname) }}
            </div>
            <div>
                {{ form_label(form.lastname) }}
            </div>
            <div>
                {{ form_widget(form.lastname) }}
            </div>
            <small>{{ form_help(form.lastname) }}</small>
        </div>
        <div>
            <div>
                {{ form_errors(form.country) }}
            </div>
            <div>
                {{ form_label(form.country) }}
            </div>
            <div>
                {{ form_widget(form.country) }}
            </div>
            <small>{{ form_help(form.country) }}</small>
        </div>
        <div>
            <div>
                {{ form_errors(form.file) }}
            </div>
            <div>
                {{ form_label(form.file) }}
            </div>
            <div>
                {{ form_widget(form.file) }}
            </div>
            <small>{{ form_help(form.file) }}</small>
        </div>
        <div style="margin: 2rem 0;">
            <button class="btn btn-primary">{{ button_label|default('Update') }}</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock form %}