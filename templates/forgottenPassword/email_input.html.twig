{% extends 'base.html.twig' %}

{% block body %}
    <h3>Put your email</h3>
    {% if invalid_email is defined %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>This email is not registered.</strong>
        </div>
    {% endif %}
    {% if invalid_token is defined %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>You have requested the password in less than 24 hours. </strong>
        </div>
    {% endif %}
    {{ include('forgottenPassword/_form_email_input.html.twig') }}
{% endblock body %}
