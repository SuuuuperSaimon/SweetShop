{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1>{{ title }}</h1>
    <hr>
    {% for message in app.flashes('success') %}
        <div>
            {{ message }}
        </div>
    {% endfor %}
    <div class="list-group">
        {% for brandshop in brandShops %}
            <div class="list-group-item">
                <h4>
                    {{ brandshop.ShopAddress }}
                </h4>
                <a href="#">
                    ссылка на карту
                </a>
            </div>
        {% endfor %}
    </div>
    <a href="{{ path('store_new') }}">Create new</a>
    <a href="{{ path('stores') }}">back to Shops</a>
{% endblock %}
